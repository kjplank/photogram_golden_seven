<h1>Edit a Photo</h1>

<form action="http://localhost:3000/update_photo/<%= @photo_to_edit.id %>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value="<%= @photo_to_edit.caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= @photo_to_edit.source %>">
  </div>
  <div>
  <button>Submit Edits</button>
  </div>
</form>
